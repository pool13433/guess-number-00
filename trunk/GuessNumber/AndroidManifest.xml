<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guessnumber"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_logo64x64"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.guessnumber.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.guessnumber.MainMutiPlayer"
            android:label="@string/title_activity_main_muti_player" >
        </activity>
        <activity
            android:name="com.example.guessnumber.MainSinglePlayer"
            android:label="@string/title_activity_main_single_player" >
        </activity>
        <activity
            android:name="com.example.guessnumber.MainGame"
            android:label="@string/title_activity_main_game" >
        </activity>
        <activity
            android:name="com.example.guessnumber.MainHighScore"
            android:label="@string/title_activity_main_high_score" >
        </activity>
    </application>

</manifest>
